.l-total
	width 100%
	text-align right
	font-size 1.8rem
	font-weight 500
	padding 10px
	margin-top -10px

.l-wrap
	overflow-x auto

.l-content
	position relative
	@extend .flex
	justify-content space-between
	align-items stretch
	min-width $container-width
	padding 70px 55px

.l-column-1
	width 47.5%

.l-column-2
	width 47.5%

.l-card-wrap
	position relative
	@extend .flex
	justify-content flex-start
	max-width 520px
	margin-bottom 20px

.o-card-group
	position relative
	@extend .paper-shadow-z1
	width 100%
	max-width 520px
	margin-bottom 20px
	.o-card
		box-shadow none

.o-card-group__divider
	position absolute
	right 0
	left 0
	margin 0 auto
	bottom -9px
	width calc(100% - 20px)
	height 1px
	background-color #e4e4e4


.o-divider
	position absolute
	top calc(50% - 17px)
	right -49px
	@extend .flex

	&:before
		content ''
		position absolute
		z-index 0
		top 50%
		left -150%
		width 400%
		height 1px
		background-color #d6d6d6

	&--linked
		.o-link
			background-image url(../resources/icons/link-g.png)

	&--unlinked
		&:before
			left -350%

		.o-link
			background-image url(../resources/icons/link-r.png)

.o-link
	position relative
	z-index 2
	width 35px
	height 35px
	border-radius 50%
	@extend .cover

