@import 'nib'

$color-bg = #fff
$color-text-primary = #666
$color-text-hint = #d6d6d6

$phone = 640px
$tablet = 768px
$laptop = 1024px
$desktop = 1440px

$container-width = 1220px

.paper-shadow-z1
	box-shadow 0 1px 6px rgba(0,0,0,0.12), 0 1px 4px rgba(0,0,0,0.12)
	
.paper-shadow-z2
	box-shadow 0 3px 10px rgba(0,0,0,0.16), 0 3px 10px rgba(0,0,0,0.23)

.paper-shadow-z3
	box-shadow 0 10px 30px rgba(0,0,0,0.19), 0 6px 10px rgba(0,0,0,0.23)
	
.paper-shadow-z4
	box-shadow 0 14px 45px rgba(0,0,0,0.25), 0 10px 18px rgba(0,0,0,0.22)

.paper-shadow-z5
	box-shadow 0 19px 60px rgba(0,0,0,0.3), 0 15px 20px rgba(0,0,0,0.22)

.h-no-gutter
	padding 0
	margin 0

.h-margin-top
	margin-top 78px

.h-text-red
	color #ff3116

.h-text-blue
	color #0c84e4

.h-text-light-blue
	color #69b8f0

.h-text-pink
	color #f58cba

.h-text-green
	color #9bbf67

.h-text-gray
	color #666

.h-text-purple
	color #a330c9

.h-text-clip
	white-space nowrap
	text-overflow ellipsis
	overflow hidden

.h-text-max-width
	max-width 250px
	
.cover
	background-position center
	background-repeat no-repeat
	background-size cover
	
.flex
	display flex
	flex-flow row wrap
	justify-content center
	align-items center
	
.transition
	transition all .2s ease-in-out
	
body
	font-family 'Roboto'
	font-size 10px
	font-weight 400
	background $color-bg
	color $color-text-primary

.container-fluid
	padding 0
	margin 0
	
.container
	width 100%
	max-width $container-width
	margin 0 auto




.l-row
	position relative
	@extend .flex
	justify-content space-between
	align-items stretch
	@media all and (max-width: 1200px)
		flex-flow column wrap
		justify-content center
		align-items center

.o-card
	position relative
	z-index 1
	width 100%
	max-width 520px
	height auto
	min-height 101px
	background-color #fff
	border-radius 3px
	padding 10px
	@extend .flex, .paper-shadow-z1, .transition
	line-height 1.3

	&__empty
		font-size 3rem
		font-weight 300
		color #d6d6d6
		user-select none
		cursor default

	&__content
		width 100%
		@extend .flex
		flex-flow row nowrap
		justify-content flex-start
		align-items flex-start

	&__pic
		margin-right 10px

		img
			width 100%
			max-width 115px
			height auto

	&__info
		flex-grow 1
		@extend .flex
		flex-flow row nowrap
		justify-content space-between
		align-items stretch

	&__title
		font-size 1.5rem
		color $color-text-primary

	&__link
		text-decoration underline
		color #0c84e4
		font-weight 300
		margin-left 12px
		&:hover
			color #0c84e4

	&__tags
		font-size 1.3rem
		font-weight 300

		span
			position relative
			margin-right 7px
			&:after
				content '|'
				position absolute
				top -2px
				right -8px
				font-size 1.3rem
				color #dcdcdc

			&:last-child
				&:after
					display none

	&__event-date
		font-size 1.3rem
		font-weight 300

	&__group
		font-size 1.3rem
		line-height 2.1

	&__info-control
		text-align right

	&__uname
		font-size 1.3rem

	&__order
		font-size 1.5rem

	&__date
		font-size 1.1rem
		font-weight 300
		line-height 1.8

	&__price
		font-size 1.8rem
		font-weight 500

	&__indicators
		@extend .flex
		flex-flow row nowrap
		justify-content flex-end
		align-items center

	&__indicators-item
		position relative
		margin-left 8px
		@extend .cover

		&:first-child
			margin-left 0

		&--circle
			&:after
				content ''
				position absolute
				top 0
				right 0
				width 5px
				height 5px
				background-color #ff5850
				border-radius 50%

		&--sms-gray
			width 16px
			height 16px
			background-image url(../resources/icons/sms/sms-gray.png)

		&--sms-green
			width 16px
			height 16px
			background-image url(../resources/icons/sms/sms-green.png)

		&--sms-yellow
			width 16px
